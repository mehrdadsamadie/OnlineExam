@model Examination.Domain.Entities.Guide

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/ckeditor/ckeditor.js"></script>
<script src="~/Scripts/ckeditor/adapters/jquery.js"></script>
<h2>Edit</h2>
@{var Question = Model.Question.Text;}
<h4>@Html.Raw(Question) </h4>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Guide</h4>
        <hr />
        @Html.ValidationSummary(true)
        @Html.HiddenFor(model => model.GuideId)
        @Html.HiddenFor(model=>model.QuestionId)
        

        <div class="form-group">
            @Html.LabelFor(model => model.Text, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Text, new {@id="Hint" })
                <script>
                    CKEDITOR.replace('Hint')
                </script>
                @Html.ValidationMessageFor(model => model.Text)
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.Reduce, new { @class = "control-label col-md-2" })
